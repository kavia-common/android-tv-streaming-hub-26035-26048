<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- outer focus ring -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/home_card_radius"/>
            <stroke android:width="2dp" android:color="@color/home_focus_ring"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <!-- inner surface -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/home_card_radius"/>
            <solid android:color="@color/ocean_surface"/>
        </shape>
    </item>
</layer-list>

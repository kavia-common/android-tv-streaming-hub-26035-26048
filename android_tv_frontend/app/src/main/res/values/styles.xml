<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV with Ocean Professional -->
    <style name="AppTheme" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/ocean_background</item>
        <item name="android:colorPrimary">@color/ocean_primary</item>
        <item name="android:colorAccent">@color/ocean_secondary</item>
        <item name="android:textColorPrimary">@color/ocean_text</item>
        <item name="android:navigationBarColor">@color/ocean_background</item>
        <item name="android:statusBarColor">@color/ocean_background</item>

        <!-- Leanback specific -->
        <item name="browseTitleViewStyle">@style/OceanBrowseTitle</item>
        <item name="rowHeaderStyle">@style/HomeRowHeader</item>
        <item name="searchOrbColor">@color/ocean_primary</item>
        <item name="searchOrbIconColor">@color/ocean_surface</item>
    </style>

    <style name="OceanBrowseTitle" parent="Widget.Leanback.TitleView">
        <item name="android:background">@color/ocean_background</item>
    </style>

    <!-- Row header text to match Figma 32px light white -->
    <style name="HomeRowHeader">
        <item name="android:textColor">@color/home_header_text</item>
        <item name="android:textSize">@dimen/home_header_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">@dimen/home_browse_header_top_padding</item>
        <item name="android:paddingBottom">@dimen/home_browse_header_bottom_padding</item>
    </style>

    <!-- Card text styles -->
    <style name="HomeCardTitleText">
        <item name="android:textColor">@color/home_card_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HomeCardSubtitleText">
        <item name="android:textColor">@color/home_card_subtitle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Details text styles approximating Figma -->
    <style name="DetailsTitleText">
        <item name="android:textColor">@color/ocean_text</item>
        <item name="android:textSize">@dimen/details_title_text_size</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="DetailsSubtitleText">
        <item name="android:textColor">@color/tv_secondary</item>
        <item name="android:textSize">@dimen/details_subtitle_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsBodyText">
        <item name="android:textColor">@color/ocean_text</item>
        <item name="android:textSize">@dimen/details_body_text_size</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="CardStyle">
        <item name="android:foregroundGravity">center</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV with Ocean Professional -->
    <style name="AppTheme" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/ocean_background</item>
        <item name="android:colorPrimary">@color/ocean_primary</item>
        <item name="android:colorAccent">@color/ocean_secondary</item>
        <item name="android:textColorPrimary">@color/ocean_text</item>
        <item name="android:navigationBarColor">@color/ocean_background</item>
        <item name="android:statusBarColor">@color/ocean_background</item>

        <!-- Leanback specific -->
        <item name="browseTitleViewStyle">@style/OceanBrowseTitle</item>
        <!-- Set orb colors directly (attribute names without a dedicated style parent to avoid missing style) -->
        <item name="searchOrbColor">@color/ocean_primary</item>
        <item name="searchOrbIconColor">@color/ocean_surface</item>
    </style>

    <style name="OceanBrowseTitle" parent="Widget.Leanback.TitleView">
        <item name="android:background">@color/ocean_background</item>
    </style>

    <style name="CardStyle">
        <item name="android:foregroundGravity">center</item>
    </style>
</resources>
